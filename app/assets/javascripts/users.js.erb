var cities = <%= JSON.parse(File.read(Rails.root.join('app/assets/json/cities.json'))) %>
var countries = <%= JSON.parse(File.read(Rails.root.join('app/assets/json/countries.json'))) %>

$(document).on('page:change', function() {
  if($('body.users_index').length > 0) {
    $( "#city" ).autocomplete({
     source: cities
    });
    
    $( "#country" ).autocomplete({
     source: countries
    });
  }
  
  
  $(".loggly").click(function() {
    ga('send', 'event', 'outbound', 'click', 'Loggly', {'hitCallback':
     function () {
      document.location = "http://www.loggly.com";
     }
   });
  });

  $("select#language").chosen();
});
